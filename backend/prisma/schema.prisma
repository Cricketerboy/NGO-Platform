datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Report {
  id              Int      @id @default(autoincrement())
  ngoId           String
  month           String
  peopleHelped    Int
  eventsConducted Int
  fundsUtilized   Float
  createdAt       DateTime @default(now())

  @@unique([ngoId, month])
}

model Job {
  id             String   @id
  status         String
  totalRows      Int
  processedRows  Int
  failedRows     Int
  createdAt      DateTime @default(now())
}
